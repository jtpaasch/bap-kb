SRC := main.s
OBJ := main.o

PROG := main.elf


#####################################################
# DEFAULT
#####################################################

.DEFAULT_GOAL := all
all: clean build


#####################################################
# BUILD
#####################################################

$(PROG): $(SRC)
	arm-linux-gnueabi-gcc -marm $(SRC) -o $(PROG)

build: $(PROG)


#####################################################
# CLEAN
#####################################################

.PHONY: clean
clean:
	rm -rf $(OBJ) $(PROG)
